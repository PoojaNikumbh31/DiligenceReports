@model DiligenceReportCreation.Models.LoginViewModel
@{
    ViewData["Title"] = "LoginFormView";
}

    <div class="text-center">
        <h1>Login</h1>
        @using (Html.BeginForm("LoginAuth", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label>Username:</label>
                @Html.TextBoxFor(LoginModel => LoginModel.Username)
            </div>
            <div class="form-group">
                <label>Password :</label>
                @Html.PasswordFor(LoginModel => LoginModel.Password)
            </div>

            <br />
            <input id="Submit" type="submit" value="Login" />     

        }
        @if (!(@TempData["message"] is null))
        {
            <p class="alert-danger">@TempData["message"].ToString()</p>
        }
    </div>
    

