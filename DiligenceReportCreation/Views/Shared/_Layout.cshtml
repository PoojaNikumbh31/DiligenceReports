@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiligenceReportCreation</title>    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            @if (!(string.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("UserName"))))
            {
                <a href="#"><img src="~/Images/sterling_logo.png" title="title" alt="additional title" /></a>
                <a class="navbar-brand" href="#">DiligenceReport</a>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Diligence" asp-action="TemplateSelection">New Form</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Diligence" asp-action="Formselection">Edit</a>
                    </li>
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("Role") == "admin")
                    {
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AdminHome">Admin Home</a>
                        </li>
                    }

                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-dark" href="#"><span class="glyphicon glyphicon-user">@HttpContextAccessor.HttpContext.Session.GetString("UserName")</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout"><span class="glyphicon glyphicon-log-out"></span></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </li>
                </ul>


            }


            @if (string.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("UserName")))
            {

                <a href="#"><img src="~/Images/sterling_logo.png" title="title" alt="additional title" /></a>
                <a class="navbar-brand" href="#">DiligenceReport</a>

            }

        </nav>
    </header>
  
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Auspicious - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
